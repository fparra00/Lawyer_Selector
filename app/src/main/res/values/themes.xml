<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!-- Style of Box Color -->
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/btnSignIn</item>
        <item name="boxStrokeWidth">10dp</item>
    </style>

    <!-- Style of Alert Dialog -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/bgWhite</item>
        <item name="colorSecondary">@color/bgWhite</item>
        <item name="colorSurface">@color/bgWhite</item>
        <item name="colorOnSurface">@color/bgWhite</item>
        <item name="alertDialogStyle">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!-- Style of Dialog -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/btnMain</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="fontFamily">@font/foundry_context</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:textSize">10dp</item>
        <item name="subtitleTextColor">@color/etYellow</item>
    </style>

    <!-- Style of Left Nav -->
    <style name="LeftNav"  parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColorPrimary">@color/bgGrey</item>
        <item name="android:textColorSecondary">@color/bgLogin</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- Style of Left Nav Item-->
    <style name="LeftNavItem"  parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColorPrimary">@color/bgLogin</item>
        <item name="android:textColorSecondary">@color/bgLogin</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">17dp</item>
    </style>
</resources>